{
    "variables": {
    "repo" : "davidgordonmitchell/aws-gcloud-kubectl-terraform",
    "tag"  : "0.1"
  },
    "builders": [
      {
        "type": "docker",
        "image": "alpine",
        "commit": "true",
        "pull": "true",
        "changes": [
          "ENV PATH=/usr/lib/google-cloud-sdk/bin:$PATH"
        ]
      }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "install.sh"
        },
        {
            "type": "inspec",
            "inspec_env_vars": [ "CHEF_LICENSE=accept"],
            "profile": "./controls"
        }
    ],
    "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `repo`}}",
        "tag": "{{user `tag`}}"
      },
      "docker-push"
    ]
  ]
 }